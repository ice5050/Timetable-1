<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :username, class: "mdl-textfield__label" %>
    <%= f.text_field :username, autocomplete: "off", class: "mdl-textfield__input" %>
  </div><br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :email, class: "mdl-textfield__label" %>
    <%= f.email_field :email, autocomplete: "off", class: "mdl-textfield__input" %>
  </div>  
  <br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :password, class: "mdl-textfield__label" %>
    <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input" %>
  </div><br>
  <em>(8 characters minimum) </em>
  <br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :password_confirmation, class: "mdl-textfield__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "bg-green mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
    <%= link_to "BACK", homepages_path, class: "bg-red mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
  </div>
<% end %>
