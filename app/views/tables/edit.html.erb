<h3>
    <i class="glyphicon glyphicon-edit"></i> Edit Class
    
</h3>


<%= form_for :table, url: user_table_path(current_user, @table), method: :patch do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :name, class: "mdl-textfield__label" %>            
        <%= f.text_field :name, class: "mdl-textfield__input" %>
    </div><br>
    <p>
        <%= f.label :year %>
        <%= f.select :year, (options_for_select([['2558', 58]], @table.year)), required: true %>

        <%= f.label :semester %>
        <%= f.select :semester, (options_for_select([['1', 1], ['2', 2]], @table.semester)), required: true %>
    </p>                                                                                                                                                                                

    <%= f.submit "SAVE", class: "bg-green mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
    <%= link_to "BACK", user_tables_path, class: "bg-red mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
<% end %>
