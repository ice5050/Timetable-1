<h3>
    <i class="glyphicon glyphicon-blackboard"></i> TABLE    
</h3>

<table class="table table-striped table-crop table-hover mdl-shadow--3dp">
    <tr>
        <td><strong>Table name</strong></td>
        <td>Year</td>
        <td>Semester</td>
        <%= raw("<td><strong>Setting</strong></td>") if user_signed_in? and @user.id == current_user.id %>
    </tr>
    <% @tables.each do |table| %>
        <tr>
            <td>
                <%= link_to table.name, user_table_classtables_path(@user, table) %>
            </td>
            <td> 25<%= table.year %> </td>
            <td> <%= table.semester %></td>
            <%= raw("<td>") if user_signed_in? and @user.id == current_user.id %>
                <%= link_to raw("<i class='glyphicon glyphicon-edit'></i>"), edit_user_table_path(current_user, table) if user_signed_in? and @user.id == current_user.id %>
                <%= link_to raw("<i class='glyphicon glyphicon-remove-sign'></i>"), user_table_path(current_user, table), method: :delete, data: { confirm: "OK" } if user_signed_in? and @user.id == current_user.id %>
            <%= raw("</td>") if user_signed_in? and @user.id == current_user.id %>
        </tr>
    <% end %>
</table>

<%= link_to "ADD NEW TABLE", new_user_table_path(current_user), class: "bg-green mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" if user_signed_in? and @user.id == current_user.id %>
<%= link_to "BACK", homepages_path, class: "bg-red mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>

