<%= form_for :time, url: { action: 'update_time' }, method: :patch do |f| %>
    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.label :time, class: "mdl-textfield__label" %>            
        <%= f.text_field :time, class: "mdl-textfield__input" %>
    </div><br>     

    <%= f.submit "SAVE", class: "bg-green mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
    <%= link_to "BACK", settings_path, class: "bg-red mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent"%>

<% end %>